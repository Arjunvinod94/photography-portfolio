<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Edit Image</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        header {
            background-color: #2c3e50;
            color: #ecf0f1;
            text-align: center;
            padding: 20px;
        }

        nav {
            background-color: #34495e;
            color: #ecf0f1;
            padding: 10px;
            text-align: center;
        }

        nav a {
            color: #ecf0f1;
            text-decoration: none;
            margin: 0 20px;
            font-size: 16px;
        }

        .container {
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 60vh;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-top: 20px;
        }

        .add-image-form {
            width: 100%;
            max-width: 400px;
            margin-top: 20px;
        }

        .add-image-form h2 {
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .add-image-form label {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
            color: #333;
        }

        .add-image-form select,
        .add-image-form button {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            font-size: 16px;
            color: #000000;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .add-image-form select {
            background-color: #ffffff;
        }

        .add-image-form button {
            background-color: #2ecc71;
        }

        .add-image-form button:hover {
            background-color: #27ae60;
        }

        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>

    <header>
        <h1>Admin Panel</h1>
    </header>

    <nav>
        <a href="/admin/home">Home</a>
        <a href="/admin/login">Logout</a>
    </nav>

    <div class="container">
        <div class="add-image-form">
            <h2>Edit Image</h2>
            <form id="addImageForm" action="" method="post">

                <label for="Category">Category</label>
                <select id="category" name="category" required>
                    <option value="<%= imageData.category %>"><%= imageData.category %></option>
                    <option value="nature">Nature</option>
                    <option value="macro">Macro</option>
                    <option value="events">Events</option>
                    <option value="objects">Objects</option>
                    <option value="people">People</option>
                    <option value="architecture">Architecture</option>
                </select>

                <button type="submit" onclick="confirmEdit(event)">Edit Image</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('addImageForm').addEventListener('submit', function (event) {
            var categoryInput = document.getElementById('category');
    
            if (!categoryInput.value) {
                alert('Category is a required field');
                event.preventDefault(); // Prevent the form from submitting
            }
        });

        function confirmEdit(event) {
            const isConfirmed = confirm('Are you sure you want to edit?')
            if (!isConfirmed) {
                event.preventDefault()
            }
        }
    </script>

</body>

</html>
